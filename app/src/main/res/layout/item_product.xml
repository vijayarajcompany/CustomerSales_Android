<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentContsraint"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
            android:src="@drawable/pepsi"
            android:id="@+id/ivProduct"
                app:layout_constraintDimensionRatio="1:1"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="114dp"
                android:scaleType="fitCenter"
                fresco:placeholderImage="@drawable/pepsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_product_name"
            android:lines="2"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/ivProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:text="@string/or"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvQuantity"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:text="20ml"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvPrice"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/pink"
            android:text="20ml"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvAvailableType"
            android:textAllCaps="false"
            android:textSize="9.2sp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_regular"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/grey_3"
            android:text="@string/available_type"
            />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_packs"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAvailableType"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_packs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:scrollbars="none"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

        </LinearLayout>
        <Button
            android:layout_width="105dp"
            android:id="@+id/btnAddToCart"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin5x2"
            app:layout_constraintStart_toStartOf="parent"
            android:textAllCaps="false"
            android:text="@string/add_to_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_packs"
            android:textColor="@color/white"
            android:textSize="9.7sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/rounded_corners_app_pink_button_bg"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
</LinearLayout>