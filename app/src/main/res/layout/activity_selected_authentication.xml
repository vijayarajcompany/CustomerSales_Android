<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pepsidrc.ui.selectAuth.SelectedAuthentication">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/red_half_circle">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_sign_up"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_half_circle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/sign_up"
            android:layout_marginStart="5dp"
            android:textSize="18.8sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/blue_half_circle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/action_sign_in_short"
            android:layout_marginStart="25dp"
            android:textSize="18.8sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"

            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlred"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/rl_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_circle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="25dp"
            android:textSize="13.8sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"

            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_circle">

    </RelativeLayout>

</RelativeLayout>
