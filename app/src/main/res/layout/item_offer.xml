<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="80dp">

    <RelativeLayout
        android:background="@drawable/rounded_corners_app_offer_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RadioButton
            android:layout_centerVertical="true"
            android:id="@+id/radio"
            android:layout_marginStart="15dp"
            android:buttonTint="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/tvTradeOffer"
            android:text="@string/trade_offer"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/radio"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/grey_4"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_below="@id/tvTradeOffer"
            android:text="@string/details"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/radio"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOffer"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="30% OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>