<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlDeliveryStatus"
    android:visibility="gone"
    android:background="@color/white">


    <LinearLayout

        android:paddingLeft="5dp"
        android:id="@+id/rlStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llConfirmed"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView

                    android:id="@+id/iv_order_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:src="@drawable/status_grey" />

                <TextView
                    android:id="@+id/tvOrderConfirmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/order_confirmed"
                    android:textColor="@color/grey_13"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginStart="18dp"
                android:background="@color/grey_10" />
            <LinearLayout
                android:id="@+id/llDeliveryCreated"
                android:padding="5dp"

                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"

                    android:id="@+id/iv_DeliveryCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_grey" />

                <TextView
                    android:id="@+id/tvllDeliveryCreated"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/delivery_created"
                    android:textColor="@color/grey_13"
                    android:textSize="14sp" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginStart="18dp"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/llOnTheWay"
                android:padding="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"

                    android:id="@+id/iv_order_on_the_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_grey" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvOnTheWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/on_the_way"
                    android:textColor="@color/grey_13"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rectangle"
                android:layout_marginTop="5dp"
                android:id="@+id/llFrom"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"

                    android:id="@+id/tvFromLabel"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/from"
                    android:textColor="@color/blue_a"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/tvFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:text="@string/on_the_way"
                    android:textColor="@color/grey_13"
                    android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectangle"
                android:layout_marginTop="5dp"
                android:id="@+id/llTO"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"

                    android:id="@+id/tvToLabel"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/to"
                    android:textColor="@color/blue_a"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tvText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="1"
                        android:text="@string/on_the_way"
                        android:textColor="@color/grey_13"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tvText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="3"
                        android:text="@string/on_the_way"
                        android:textColor="@color/grey_13"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginStart="18dp"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/llDelivered"
                android:padding="5dp"

                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:id="@+id/iv_order_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_grey" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvDelivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text="@string/delivered"
                    android:textColor="@color/grey_13"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
